<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_gray_44" />
            <corners android:radius="@dimen/base_corner"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_ripple_compat" />
            <corners android:radius="@dimen/base_corner"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/palette_green"/>
            <corners android:radius="@dimen/base_corner"/>
        </shape>
    </item>
</selector>

