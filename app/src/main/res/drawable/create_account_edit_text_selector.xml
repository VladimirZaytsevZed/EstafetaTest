<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/palette_red"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/palette_green"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2dp" android:color="@color/gray_6b"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>